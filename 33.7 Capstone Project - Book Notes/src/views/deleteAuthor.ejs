<%- include('partials/header.ejs') %>

    <div class="container">
        <div class="row mt-5">
            <div class="col">
                <h3 class="mb-4">¿Estás seguro que quiere eliminar la siguiente información?</h3>
                <form action="" method="post">
                    
                    <% content.forEach(author => { %>
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Escribe el nombre del autor" value="<%= author.name %>" autocomplete="off">
                        </div>
                    
                    <% }) %>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Eliminar autor</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>